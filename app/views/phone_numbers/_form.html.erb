<%= semantic_form_for [@phonable, @phone_number] do |f| %>
  <%= f.error_messages %>
  <%= f.inputs t(:general) do %>
    <%= form_element t(:for) do %>
      <%= @phonable.to_s %>
    <% end %>
    <%= f.input :phone_type, as: :select, collection: PhoneNumber::PHONE_TYPES, include_blank: false %>
    <%= f.input :number %>
  <% end %>
  <%= f.actions %>
<% end %>