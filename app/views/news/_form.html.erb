<%= semantic_form_for @news do |f| %>
  <%= f.inputs News.model_name.human do %>
    <%= f.input :title %>
    <%= f.input :body, input_html: { class: 'textile_editor' } %>
    <%= f.input :published_at %>
    <%= f.input :publish_to, as: :check_boxes, collection: News::PUBLISH_TO.each_with_index.map { |p, i| [t(p, scope: ""), p] } %>
  <% end %>

  <%= f.actions %>
<% end %>