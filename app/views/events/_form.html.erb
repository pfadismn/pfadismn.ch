<%= semantic_form_for [@ou, @event] do |f| %>
  <%= f.error_messages %>
  <%= f.inputs t(:Allgemeines) do %>
    <%= f.input :organisational_unit if current_user.has_role? (:admin) %>
    <%= f.input :name %>
    <%= f.input :start_time, { start_year: Date.today.year, minute_step: 15 }  %>
    <%= f.input :start_place %>
    <%= f.input :end_time, { start_year: Date.today.year, minute_step: 15 } %>
    <%= f.input :end_place %>
  <% end %>
  <%= f.inputs t(:Zusatzinfos) do %>
    <%= f.input :description %>
    <%= f.input :take_along %>
    <%= f.input :published, as: :boolean %>
  <% end %>
  <%= f.inputs t(:Content) do %>
    <%= f.input :content_image, as: :file %>
  <% end if current_user.has_role? [:manager, :admin] %>
  <%= f.actions %>
<% end %>