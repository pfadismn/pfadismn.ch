<%= semantic_form_for @user do |f| %>
  <%= f.error_messages %>

  <%= f.inputs t(:general) do %>
    <%= f.input :member %>
    <%= f.input :roles, as: :hidden, input_html: { name:'user[roles][]', value: 0 } %>
    <%= f.input :roles, as: :select, input_html: { multiple: true, class: 'chosen-select',  name:'user[roles][]', value: @user.roles }, wrapper_html: { class: 'chosen' }, collection: User::ROLES.map{ |f| [t(f), f] } %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  <% end %>

  <%= f.actions %>
<% end %>